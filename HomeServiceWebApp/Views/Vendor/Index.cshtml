
@{
    ViewBag.Title = "Home";
}


@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
        <p>@ViewBag.Message</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="row mt-4">
    <div class="card col-md-3 mx-2" style="width: 18rem;">
        <img class="card-img-top" src="~/Content/Images/View.svg" alt="Card image cap" height="200" width="200">
        <div class="card-body">
            <h5 class="card-title">Add Vendor's Contact Details</h5>
            @Html.ActionLink("View Vendor Details", "ViewVendorDetails", null, htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    </div>

    <div class="card col-md-3 mx-2" style="width: 18rem;">
        <img class="card-img-top" src="~/Content/Images/Add.svg" alt="Card image cap" height="200" width="200">
        <div class="card-body">
            <h5 class="card-title">Add Vendor's Contact Details</h5>
            @if (ViewBag.ShowAddContactsLink == true)
            {
                @Html.ActionLink("Add Contact Details", "AddContactDetails", null, htmlAttributes: new { @class = "btn btn-primary" })
            }
            else
            {
                <button class="btn btn-primary" disabled>Already Added</button>
            }
        </div>
    </div>

    <div class="card col-md-3 mx-2" style="width: 18rem;">
        <img class="card-img-top" src="~/Content/Images/Edit.svg" alt="Card image cap" height="200" width="200">
        <div class="card-body">
            <h5 class="card-title">Edit Vendor's Contact Details</h5>
            @Html.ActionLink("Edit Contact Details", "EditVendorDetails", null, htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    </div>
</div>